	journaltitle = {Frontiers in Cellular Neuroscience},
	shortjournal = {Front Cell Neurosci},
	author = {Krenz, Wulf-Dieter C. and Parker, Anna R. and Rodgers, Edmund W. and Baro, Deborah J.},
	date = {2014},
	pmid = {24596543},
	pmcid = {PMC3925969},
	keywords = {activity-dependent, argonaute, conductance ratio, crustacean, {HCN}, Kv4, small noncoding {RNA}, stomatogastric},
